<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.LoginController"
      style="-fx-background-color: #f5f6fa;">
    
    <!-- Main Card Container -->
    <VBox alignment="CENTER" spacing="20" maxWidth="350" 
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>
        
        <!-- Logo / Header -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="ðŸ“š" style="-fx-font-size: 40px;"/>
            <Label text="Quiz Platform" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2B3A67;"/>
            <Label text="Sign in to continue" style="-fx-font-size: 13px; -fx-text-fill: #6c757d;"/>
        </VBox>
        
        <Region prefHeight="10"/>
        
        <!-- Login Form -->
        <VBox spacing="15" fillWidth="true">
            <!-- Email Field -->
            <VBox spacing="5">
                <Label text="Email" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="emailField" promptText="Enter your email" prefHeight="40"
                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6;"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" prefHeight="40"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6;"/>
            </VBox>
            
            <!-- Error Message -->
            <Label fx:id="errorLabel" text="" visible="false" wrapText="true"
                   style="-fx-text-fill: #dc3545; -fx-font-size: 12px;"/>
            
            <!-- Login Button -->
            <Button text="Sign In" onAction="#handleLogin" prefHeight="42" maxWidth="Infinity"
                    style="-fx-background-color: #2B3A67; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </VBox>
        
    </VBox>
</VBox>
