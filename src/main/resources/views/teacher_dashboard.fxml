<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.ui.controllers.TeacherDashboardController"
            style="-fx-background-color: #f5f6fa;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2B3A67; -fx-padding: 15 25 15 25;">
            <Label text="ðŸ“š Quiz Platform" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="TEACHER" style="-fx-font-size: 11px; -fx-text-fill: #5C80BC; -fx-background-color: rgba(255,255,255,0.1); -fx-padding: 4 10; -fx-background-radius: 3;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="userEmailLabel" text="teacher@quiz.com" style="-fx-font-size: 11px; -fx-text-fill: #adb5bd;"/>
            </VBox>
            
            <Button text="Logout" onAction="#handleLogout" 
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox spacing="25">
                <padding>
                    <Insets top="25" right="30" bottom="25" left="30"/>
                </padding>

                <!-- Page Title -->
                <Label text="Teacher Dashboard" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- Group Selection Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                    <Label text="ðŸ“š My Groups" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <TableView fx:id="groupsTable" prefHeight="150"
                               style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                        <columns>
                            <TableColumn fx:id="groupNameColumn" text="Group Name" prefWidth="250"/>
                            <TableColumn fx:id="groupStudentsColumn" text="Students" prefWidth="100"/>
                            <TableColumn fx:id="groupQuizzesColumn" text="Quizzes" prefWidth="100"/>
                        </columns>
                        <placeholder>
                            <Label text="No groups assigned. Contact your admin to create groups for you." style="-fx-text-fill: #6c757d;"/>
                        </placeholder>
                    </TableView>

                    <Label fx:id="selectedGroupLabel" text="ðŸ’¡ Select a group to manage its quizzes"
                           style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                </VBox>

                <!-- Stats Cards Row -->
                <HBox spacing="20">
                    <!-- My Quizzes Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸ“" style="-fx-font-size: 24px;"/>
                        <Label fx:id="myQuizzesCount" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2B3A67;"/>
                        <Label text="Group Quizzes" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                    </VBox>

                    <!-- Total Attempts Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸ“Š" style="-fx-font-size: 24px;"/>
                        <Label fx:id="totalAttemptsCount" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #5C80BC;"/>
                        <Label text="Total Attempts" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                    </VBox>

                    <!-- Average Score Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸŽ¯" style="-fx-font-size: 24px;"/>
                        <Label fx:id="averageScoreLabel" text="N/A" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                        <Label text="Group Average" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                    </VBox>
                </HBox>

                <!-- Tabs -->
                <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">

                    <!-- My Quizzes Tab -->
                    <Tab text="  My Quizzes  ">
                        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

                            <!-- Action Bar -->
                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <TextField fx:id="quizSearchField" promptText="ðŸ” Search quizzes..." prefWidth="280" prefHeight="38"
                                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6;"/>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Button text="â†» Refresh" onAction="#handleRefresh"
                                        style="-fx-background-color: transparent; -fx-text-fill: #6c757d; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 14; -fx-cursor: hand;"/>

                                <Button text="â“ Manage Questions" onAction="#handleManageQuestions"
                                        style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-padding: 8 14; -fx-background-radius: 5; -fx-cursor: hand;"/>

                                <Button text="âœ Edit" onAction="#handleEditQuiz"
                                        style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-padding: 8 14; -fx-background-radius: 5; -fx-cursor: hand;"/>

                                <Button text="ðŸ—‘ Delete" onAction="#handleDeleteQuiz"
                                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8 14; -fx-background-radius: 5; -fx-cursor: hand;"/>

                                <Button text="+ New Quiz" onAction="#handleCreateQuiz"
                                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
                            </HBox>

                            <!-- Quizzes Table -->
                            <TableView fx:id="quizzesTable" prefHeight="280" VBox.vgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                <columns>
                                    <TableColumn fx:id="quizTitleColumn" text="Title" prefWidth="180"/>
                                    <TableColumn fx:id="quizDescriptionColumn" text="Description" prefWidth="250"/>
                                    <TableColumn fx:id="quizQuestionsColumn" text="Questions" prefWidth="80"/>
                                    <TableColumn fx:id="quizAttemptsColumn" text="Attempts" prefWidth="80"/>
                                    <TableColumn fx:id="quizAvgScoreColumn" text="Avg Score" prefWidth="100"/>
                                </columns>
                                <placeholder>
                                    <Label text="No quizzes yet. Click '+ New Quiz' to create one!" style="-fx-text-fill: #6c757d;"/>
                                </placeholder>
                            </TableView>

                            <Label text="ðŸ’¡ Select a quiz to assign it to students or view detailed results"
                                   style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        </VBox>
                    </Tab>

                    <!-- Student List Tab -->
                    <Tab text="  Student List  ">
                        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

                            <Label text="Students in Selected Group" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                            <Separator/>

                            <!-- Students Table -->
                            <TableView fx:id="studentsTable" prefHeight="320" VBox.vgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                <columns>
                                    <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="200"/>
                                    <TableColumn fx:id="studentEmailColumn" text="Email" prefWidth="250"/>
                                    <TableColumn fx:id="studentGroupAvgColumn" text="Group Average" prefWidth="140"/>
                                </columns>
                                <placeholder>
                                    <Label text="Select a group above to view its students."
                                           style="-fx-text-fill: #6c757d;"/>
                                </placeholder>
                            </TableView>

                            <Label text="ðŸ’¡ Select a group from the 'My Groups' section to see enrolled students"
                                   style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        </VBox>
                    </Tab>

                    <!-- Student Results Tab -->
                    <Tab text="  Student Results  ">
                        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

                            <Label text="Quiz Attempts" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                            <Label fx:id="resultsFilterLabel" text="ðŸ’¡ Select a quiz from 'My Quizzes' tab and a student from 'Student List' tab to view their attempts"
                                   style="-fx-font-size: 12px; -fx-text-fill: #6c757d; -fx-padding: 5 0;"/>

                            <Separator/>

                            <!-- Results Table -->
                            <TableView fx:id="resultsTable" prefHeight="320" VBox.vgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                <columns>
                                    <TableColumn fx:id="resultAttemptColumn" text="Attempt #" prefWidth="100"/>
                                    <TableColumn fx:id="resultScoreColumn" text="Score" prefWidth="150"/>
                                    <TableColumn fx:id="resultPercentageColumn" text="Percentage" prefWidth="150"/>
                                    <TableColumn fx:id="resultDateColumn" text="Date" prefWidth="200"/>
                                </columns>
                                <placeholder>
                                    <Label text="Select a quiz and a student to view their attempts."
                                           style="-fx-text-fill: #6c757d;"/>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </Tab>
                </TabPane>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
