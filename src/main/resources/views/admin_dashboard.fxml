<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.ui.controllers.AdminDashboardController"
            style="-fx-background-color: #f5f6fa;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2B3A67; -fx-padding: 15 25 15 25;">
            <Label text="ðŸ“š Quiz Platform" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="ADMIN" style="-fx-font-size: 11px; -fx-text-fill: #dc3545; -fx-background-color: rgba(255,255,255,0.15); -fx-padding: 4 10; -fx-background-radius: 3; -fx-font-weight: bold;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="userEmailLabel" text="admin@quiz.com" style="-fx-font-size: 11px; -fx-text-fill: #adb5bd;"/>
            </VBox>
            
            <Button text="Logout" onAction="#handleLogout" 
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox spacing="25">
                <padding>
                    <Insets top="25" right="30" bottom="25" left="30"/>
                </padding>

                <!-- Page Title -->
                <Label text="Admin Dashboard" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- Stats Cards Row -->
                <HBox spacing="15">
                    <!-- Total Users Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸ‘¥" style="-fx-font-size: 22px;"/>
                        <Label fx:id="totalUsersCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2B3A67;"/>
                        <Label text="Total Users" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                    </VBox>

                    <!-- Teachers Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸ‘¨â€ðŸ«" style="-fx-font-size: 22px;"/>
                        <Label fx:id="teacherCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #5C80BC;"/>
                        <Label text="Teachers" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                    </VBox>

                    <!-- Students Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸ‘¨â€ðŸŽ“" style="-fx-font-size: 22px;"/>
                        <Label fx:id="studentCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                        <Label text="Students" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                    </VBox>

                    <!-- Total Quizzes Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸ“" style="-fx-font-size: 22px;"/>
                        <Label fx:id="totalQuizzesCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
                        <Label text="Quizzes" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                    </VBox>

                    <!-- Total Attempts Card -->
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                        <Label text="ðŸ“Š" style="-fx-font-size: 22px;"/>
                        <Label fx:id="totalAttemptsCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
                        <Label text="Attempts" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                    </VBox>
                </HBox>

                <!-- Tabs -->
                <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                    
                    <!-- User Management Tab -->
                    <Tab text="  User Management  ">
                        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">
                            
                            <!-- Action Bar -->
                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <TextField fx:id="userSearchField" promptText="ðŸ” Search users..." prefWidth="250" prefHeight="38"
                                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6;"/>
                                
                                <ComboBox fx:id="roleFilterCombo" prefHeight="38" prefWidth="130"
                                          style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
                                
                                <Region HBox.hgrow="ALWAYS"/>
                                
                                <Button text="â†» Refresh" onAction="#handleRefresh"
                                        style="-fx-background-color: transparent; -fx-text-fill: #6c757d; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 14; -fx-cursor: hand;"/>
                                
                                <Button text="ðŸ—‘ Delete" onAction="#handleDeleteUser"
                                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8 14; -fx-background-radius: 5; -fx-cursor: hand;"/>
                                
                                <Button text="âœ Edit" onAction="#handleEditUser"
                                        style="-fx-background-color: #5C80BC; -fx-text-fill: white; -fx-padding: 8 14; -fx-background-radius: 5; -fx-cursor: hand;"/>
                                
                                <Button text="+ Add User" onAction="#handleAddUser"
                                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 18; -fx-background-radius: 5; -fx-cursor: hand;"/>
                            </HBox>

                            <!-- Users Table -->
                            <TableView fx:id="usersTable" prefHeight="280" VBox.vgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                <columns>
                                    <TableColumn fx:id="userIdColumn" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="userNameColumn" text="Name" prefWidth="180"/>
                                    <TableColumn fx:id="userEmailColumn" text="Email" prefWidth="250"/>
                                    <TableColumn fx:id="userRoleColumn" text="Role" prefWidth="100"/>
                                </columns>
                                <placeholder>
                                    <Label text="No users found" style="-fx-text-fill: #6c757d;"/>
                                </placeholder>
                            </TableView>

                            <Label text="ðŸ’¡ Select a user to edit or delete. Use the role filter to narrow down the list." 
                                   style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        </VBox>
                    </Tab>

                    <!-- Group Management Tab -->
                    <Tab text="  Group Management  ">
                        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

                            <!-- Action Bar -->
                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <Label text="Group Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Button text="â†» Refresh" onAction="#handleRefreshGroups"
                                        style="-fx-background-color: transparent; -fx-text-fill: #6c757d; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 14; -fx-cursor: hand;"/>

                                <Button text="ðŸ—‘ Delete Group" onAction="#handleDeleteGroup"
                                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8 14; -fx-background-radius: 5; -fx-cursor: hand;"/>

                                <Button text="+ Create Group" onAction="#handleCreateGroup"
                                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 18; -fx-background-radius: 5; -fx-cursor: hand;"/>
                            </HBox>

                            <!-- Groups Table -->
                            <TableView fx:id="groupsTable" prefHeight="200"
                                       style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                <columns>
                                    <TableColumn fx:id="groupIdColumn" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="groupNameColumn" text="Group Name" prefWidth="250"/>
                                    <TableColumn fx:id="groupTeacherColumn" text="Teacher" prefWidth="200"/>
                                    <TableColumn fx:id="groupStudentCountColumn" text="Students" prefWidth="100"/>
                                </columns>
                                <placeholder>
                                    <Label text="No groups created yet." style="-fx-text-fill: #6c757d;"/>
                                </placeholder>
                            </TableView>

                            <Separator/>

                            <!-- Enrollment Management -->
                            <Label text="Enrollment Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <ComboBox fx:id="enrollmentGroupCombo" promptText="Select Group" prefWidth="200" prefHeight="38"
                                          style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

                                <ComboBox fx:id="enrollmentStudentCombo" promptText="Select Student" prefWidth="250" prefHeight="38"
                                          style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

                                <Button text="+ Enroll Student" onAction="#handleEnrollStudent"
                                        style="-fx-background-color: #5C80BC; -fx-text-fill: white; -fx-padding: 10 18; -fx-background-radius: 5; -fx-cursor: hand;"/>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Button text="ðŸ—‘ Remove Selected" onAction="#handleRemoveStudent"
                                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 10 18; -fx-background-radius: 5; -fx-cursor: hand;"/>
                            </HBox>

                            <!-- Enrolled Students Table -->
                            <TableView fx:id="enrolledStudentsTable" prefHeight="200" VBox.vgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                <columns>
                                    <TableColumn fx:id="enrolledStudentIdColumn" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="enrolledStudentNameColumn" text="Student Name" prefWidth="200"/>
                                    <TableColumn fx:id="enrolledStudentEmailColumn" text="Email" prefWidth="250"/>
                                </columns>
                                <placeholder>
                                    <Label text="Select a group to view enrolled students." style="-fx-text-fill: #6c757d;"/>
                                </placeholder>
                            </TableView>

                            <Label text="ðŸ’¡ Select a group from the table above to manage its enrollments below."
                                   style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        </VBox>
                    </Tab>

                    <!-- Quizzes Overview Tab -->
                    <Tab text="  All Quizzes  ">
                        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

                            <Label text="Platform Quizzes Overview" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                            <Separator/>

                            <!-- Quizzes Table -->
                            <TableView fx:id="quizzesTable" prefHeight="320" VBox.vgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                <columns>
                                    <TableColumn fx:id="quizIdColumn" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="quizTitleColumn" text="Quiz Title" prefWidth="250"/>
                                    <TableColumn fx:id="quizTeacherColumn" text="Created By" prefWidth="180"/>
                                    <TableColumn fx:id="quizQuestionsColumn" text="Questions" prefWidth="100"/>
                                </columns>
                                <placeholder>
                                    <Label text="No quizzes in the platform yet."
                                           style="-fx-text-fill: #6c757d;"/>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </Tab>
                </TabPane>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
