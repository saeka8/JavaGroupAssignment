<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.ui.controllers.RegisterController"
      style="-fx-background-color: #f5f6fa;">
    
    <!-- Main Card Container -->
    <VBox alignment="CENTER" spacing="15" maxWidth="380" 
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);">
        <padding>
            <Insets top="35" right="40" bottom="35" left="40"/>
        </padding>
        
        <!-- Header -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="ðŸ“š" style="-fx-font-size: 36px;"/>
            <Label text="Create Account" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2B3A67;"/>
            <Label text="Join the Quiz Platform" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
        </VBox>
        
        <Region prefHeight="5"/>
        
        <!-- Registration Form -->
        <VBox spacing="12" fillWidth="true">
            <!-- Name Fields (side by side) -->
            <HBox spacing="10">
                <VBox spacing="3" HBox.hgrow="ALWAYS">
                    <Label text="First Name" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="firstNameField" promptText="First name" prefHeight="38"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6; -fx-font-size: 13px;"/>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS">
                    <Label text="Last Name" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="lastNameField" promptText="Last name" prefHeight="38"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6; -fx-font-size: 13px;"/>
                </VBox>
            </HBox>
            
            <!-- Email Field -->
            <VBox spacing="3">
                <Label text="Email" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="emailField" promptText="your.email@example.com" prefHeight="38"
                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6; -fx-font-size: 13px;"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="3">
                <Label text="Password" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <PasswordField fx:id="passwordField" promptText="At least 5 characters" prefHeight="38"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6; -fx-font-size: 13px;"/>
            </VBox>
            
            <!-- Confirm Password Field -->
            <VBox spacing="3">
                <Label text="Confirm Password" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Repeat your password" prefHeight="38"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dee2e6; -fx-font-size: 13px;"/>
            </VBox>
            
            <!-- Role Selection -->
            <VBox spacing="3">
                <Label text="I am a..." style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <ComboBox fx:id="roleComboBox" prefHeight="38" maxWidth="Infinity"
                          style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 13px;"/>
            </VBox>
            
            <!-- Error Message -->
            <Label fx:id="errorLabel" text="" visible="false" wrapText="true"
                   style="-fx-text-fill: #dc3545; -fx-font-size: 12px;"/>
            
            <!-- Success Message -->
            <Label fx:id="successLabel" text="" visible="false" wrapText="true"
                   style="-fx-text-fill: #28a745; -fx-font-size: 12px;"/>
            
            <!-- Register Button -->
            <Button text="Create Account" onAction="#handleRegister" prefHeight="40" maxWidth="Infinity"
                    style="-fx-background-color: #2B3A67; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </VBox>
        
        <!-- Back to Login Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
            <Hyperlink text="Sign in" onAction="#handleBackToLogin" 
                       style="-fx-text-fill: #2B3A67; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        </HBox>
        
    </VBox>
</VBox>
