<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.ui.controllers.QuizTakeController"
            style="-fx-background-color: #f5f6fa;">

    <!-- Top Bar -->
    <top>
        <VBox>
            <!-- Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2B3A67; -fx-padding: 15 25 15 25;">
                <Label text="ðŸ“š Quiz Platform" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Label fx:id="quizTitleLabel" text="Quiz Title" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button text="âœ• Quit" onAction="#handleQuit" 
                        style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 5; -fx-cursor: hand;"/>
            </HBox>
            
            <!-- Progress Bar Section -->
            <HBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-padding: 12 25; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;">
                <Label fx:id="progressLabel" text="Question 1 of 10" style="-fx-font-size: 13px; -fx-text-fill: #6c757d;"/>
                <ProgressBar fx:id="progressBar" progress="0.1" prefWidth="400" prefHeight="8" 
                             style="-fx-accent: #2B3A67;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox alignment="CENTER" spacing="30">
                <padding>
                    <Insets top="40" right="50" bottom="40" left="50"/>
                </padding>

                <!-- Question Card -->
                <VBox maxWidth="700" spacing="25" 
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">
                    
                    <!-- Question Header -->
                    <Label fx:id="questionNumberLabel" text="Question 1" 
                           style="-fx-font-size: 13px; -fx-text-fill: #5C80BC; -fx-font-weight: bold;"/>
                    
                    <!-- Question Text -->
                    <Label fx:id="questionTextLabel" text="Loading question..." 
                           wrapText="true" 
                           style="-fx-font-size: 20px; -fx-text-fill: #2c3e50; -fx-line-spacing: 5;"/>
                    
                    <!-- Separator -->
                    <Region prefHeight="10"/>
                    
                    <!-- Options Container (populated programmatically) -->
                    <VBox fx:id="optionsContainer" spacing="12">
                        <!-- Options will be added here by the controller -->
                    </VBox>
                    
                </VBox>

                <!-- Navigation Buttons -->
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="prevButton" text="â† Previous" onAction="#handlePrevious"
                            style="-fx-background-color: transparent; -fx-text-fill: #2B3A67; -fx-border-color: #2B3A67; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 12 25; -fx-font-size: 14px; -fx-cursor: hand;"/>
                    
                    <Button fx:id="nextButton" text="Next â†’" onAction="#handleNext"
                            style="-fx-background-color: #2B3A67; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 30; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                    
                    <Button fx:id="submitButton" text="Submit Quiz âœ“" onAction="#handleSubmit" visible="false" managed="false"
                            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 30; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;"/>
                </HBox>

                <!-- Help Text -->
                <Label text="ðŸ’¡ Select an answer and click Next to continue. You can go back to change your answers." 
                       style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
